{% set navItems = collections.nav | eleventyNavigation %}
<nav role="navigation" aria-label="main navigation">
        <ul>
            {%- for item in navItems %}
                <li class="nav__item{{ ' active' if page.url === item.url }}">
                    <a href="{{ item.url }}" title="{{ item.key }}">{{ item.key }}</a>
                </li>
            {%- endfor -%}
        </ul>

    <div class="toggle-container" title="High contrast theme">
        <div class="toggle">
            <span class="icon" id="night-mode-toggle">&#x1F319;</span> <!-- Unicode moon icon -->
        </div>
    </div>
</nav>
<script>
    const toggle = document.getElementById("night-mode-toggle");
    const body = document.body;

    toggle.addEventListener("click", function () {
        body.classList.toggle("high-contrast");
        toggle.innerHTML = body.classList.contains("high-contrast") ? "‚òÄÔ∏è" : "üåô";
    });
</script>
